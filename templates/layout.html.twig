{% extends "base.html.twig" %}

{% block header %}
<div class="d-flex flex-column justify-content-between" style="min-height: 100%;">
    <div class="">
          <header class="">
            <div class="nav-scroller py-1 bg-primary">
              {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="container d-flex align-items-center justify-content-between">
                  <div class="col-8">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                      <a class="navbar-brand" href="{{path('home')}}">
                      {% if app.user is defined %}{{app.user.library }}{% endif %}
                      </a>
                      <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                          <li class="nav-item {% if current_menu is defined and current_menu == 'pret' %} active{% endif %}">
                            <a class="nav-link" href="{{path('book_index')}}">Emprunter un livre</a>
                          </li>
                          <li class="nav-item {% if current_menu is defined and current_menu == 'user' %} active{% endif %}">
                            <a class="nav-link" href="{{path('users')}}">Les Emprunteurs</a>
                          </li>
                        </ul>
                      </div>
                    </nav>
                  </div>
                  <div class="col-4 pr-0 d-flex justify-content-end">
                    <a class="btn btn-light" href="{{path('app_logout')}}">Se deconnecter</a>
                  </div>
                </div>
              {% endif %}
            </div>

          </header>
          <main class="container">
{% endblock %}

{% block footer %}
          </main>
    </div>
    <footer class="blog-footer" style="padding: 2.5rem 0;color: #999;text-align: center;background-color: #f9f9f9;border-top: .05rem solid #e5e5e5;">
      <p>Blog template built for <a href="https://getbootstrap.com/">Bootstrap</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
      <p><a href="#">Retour en haut</a></p>
    </footer>
</div>
{% endblock %}
